{
    "name": "itakademy/oauth2-akanet",
    "description": "IT-Akademy's Akanet OAuth 2.0 Client Provider for The PHP League OAuth2-Client",
    "license": "MIT",
    "authors": [
        {
            "name": "Jean-Baptiste MONIN",
            "email": "jb.monin@it-akademy.fr",
            "homepage": "https://github.com/Black0wI"
        },
        {
            "name": "Isabelle HUGUES",
            "email": "i.hugues@it-akademy.fr",
            "homepage": "https://github.com/isa-itakademy-sxm"
        }
    ],
    "keywords": [
        "oauth",
        "oauth2",
        "client",
        "authorization",
        "authorisation",
        "akanet"
    ],
    "require": {
        "php": "^7.3 || ^8.0",
        "ext-json": "*",
        "league/oauth2-client": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.6",
        "mockery/mockery": "^1.4"
    },
    "autoload": {
        "psr-4": {
            "League\\OAuth2\\Client\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "League\\OAuth2\\Client\\Test\\": "test/src/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.1.x-dev"
        }
    },
    "scripts": {
        "check": "phpcs src test --standard=PSR12 -sp"
    }
}
